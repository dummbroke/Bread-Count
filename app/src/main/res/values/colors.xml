    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Background Colors -->
    <color name="soft_pearl_white">#F8F9FA</color>
    <color name="warm_ash_gray">#E0E0E0</color>
    <color name="creamy_vanilla">#FAF8F2</color>

    <!-- Text Colors -->
    <color name="graphite_black">#2D2D2D</color>
    <color name="espresso_black">#2D2C2F</color>

