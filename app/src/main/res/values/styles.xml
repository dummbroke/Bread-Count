<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color</item>
        <item name="android:background">@color/nav_background</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">10dp</item>
    </style>
</resources> 