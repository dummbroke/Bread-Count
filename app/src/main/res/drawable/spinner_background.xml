<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape with Rounded Corners and Stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/soft_latte_beige" />
            <corners android:radius="8dp" /> <!-- Ensures the corners are rounded -->
            <stroke
                android:width="1dp"
                android:color="@color/charcoal_gray" /> <!-- Adds the stroke around the shape -->
        </shape>
    </item>

    <!-- Dropdown Arrow Icon -->
    <item
        android:drawable="@drawable/ic_arrow_drop_down"
        android:gravity="end|center_vertical"
        android:right="12dp" />
</layer-list>