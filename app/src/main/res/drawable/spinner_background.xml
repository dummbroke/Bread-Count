<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/creamy_vanilla" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1dp"
                android:color="@color/charcoal_gray" />
            <padding
                android:left="12dp"
                android:right="32dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <!-- Dropdown Arrow -->
    <item
        android:drawable="@drawable/ic_arrow_down"
        android:gravity="end|center_vertical"
        android:right="4dp" />
</layer-list> 